  "categories": ["education", "productivity", "utilities"],

  "icons": [
    {
      "src": "https://github.com/programmerdeepakgit/time-bloom-guardian/blob/main/public/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://github.com/programmerdeepakgit/time-bloom-guardian/blob/main/public/icons/icon-192-maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "https://github.com/programmerdeepakgit/time-bloom-guardian/blob/main/public/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://github.com/programmerdeepakgit/time-bloom-guardian/blob/main/public/icons/icon-512-maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],

  "shortcuts": [
    {
      "name": "Self Study Timer",
      "short_name": "Self Study",
      "description": "Start your self study session",
      "url": "/?action=self-study",
      "icons": [
        {
          "src": "https://github.com/programmerdeepakgit/time-bloom-guardian/blob/main/public/icons/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Lecture Study Timer",
      "short_name": "Lecture Study",
      "description": "Start your lecture study session",
      "url": "/?action=lecture-study",
      "icons": [
        {
          "src": "https://github.com/programmerdeepakgit/time-bloom-guardian/blob/main/public/icons/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "file_handlers": [
    {
      "action": "/open-file",
